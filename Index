    <script>
        let balance = 0;
        let bossHP = 100;
        const ROYAL_CODES = ["LION_77", "KING_01", "FREEDOM"]; // Ø´ÙØ±Ø§ØªÙƒ Ø§Ù„Ø³Ø±ÙŠØ©

        function verifyAccess() {
            const code = document.getElementById('invite-input').value;
            if (ROYAL_CODES.includes(code)) {
                document.getElementById('lock-screen').style.display = 'none';
                document.getElementById('covenant-screen').style.display = 'flex';
            } else {
                alert("Ù„Ø§ Ù…ÙƒØ§Ù† Ù„Ù„Ø¹Ø¨ÙŠØ¯ Ù‡Ù†Ø§. Ø§Ø±Ø­Ù„.");
            }
        }

        function startApp() {
            document.getElementById('covenant-screen').style.display = 'none';
            document.getElementById('app').style.display = 'flex';
        }

        function mine(e) {
            e.preventDefault();
            balance += 0.0001;
            document.getElementById('balance').innerText = balance.toFixed(4);

            // ØªØ£Ø«ÙŠØ± Ø§Ù„Ù…Ø®Ø§Ù„Ø¨
            const claw = document.createElement('div');
            claw.className = 'claw-mark';
            const touch = e.touches ? e.touches[0] : e;
            claw.style.left = (touch.clientX - 40) + 'px';
            claw.style.top = (touch.clientY - 40) + 'px';
            document.body.appendChild(claw);
            setTimeout(() => claw.remove(), 500);

            if (navigator.vibrate) navigator.vibrate(20);
        }

        function triggerEclipse() {
            document.getElementById('eclipse-overlay').style.display = 'flex';
        }

        function attackBoss() {
            bossHP -= 5;
            document.getElementById('hp-fill').style.width = bossHP + "%";
            if(bossHP <= 0) {
                alert("ØªÙ… Ø³Ø­Ù‚ Ø§Ù„Ù…Ø±ÙƒØ²ÙŠØ©! ØºÙ†Ø§Ø¦Ù… Ø§Ù„Ø¨ÙŠØªÙƒÙˆÙŠÙ† ÙÙŠ Ø§Ù†ØªØ¸Ø§Ø±Ùƒ.");
                closeEclipse();
            }
        }

        function closeEclipse() {
            document.getElementById('eclipse-overlay').style.display = 'none';
            bossHP = 100;
            document.getElementById('hp-fill').style.width = "100%";
        }
    </script>
